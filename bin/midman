#!/usr/bin/env node

const midman = require('commander')
const lib = require('../lib')
const config = require('../config')

midman
  .version(require('../package.json').version)

// commands
midman
  .command('start')
  .alias('s')
  .description('Start server')
  .option('-s, --static file dir <dir>', `Static file path. Should be absolute path. Default is ${config.staticPath}`)
  .option('-p, --port <port>', `Server port. Should be absolute path. Default is ${config.port}`)
  .action(lib.server)

midman.parse(process.argv)