doctype html
html
  head
    title Midman
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
    link(rel="stylesheet", href="/assets/build/main.css")
  body
    h1.band Midman
    - if(files.length > 0)
      #info Total #{ files.length } files
    - else 
      #info No file
    #file-list
      - for(var i in files)
        .item(class="#{ i % 2 === 0 ? 'even' : 'odd' }")
          a(href="#{ files[i] }") #{ files[i] }
          a.btn(href="javascript:void(0)", data-clipboard-text="#{ hostname }/#{files[i]}") copy
    script(src="/assets/build/main.js")